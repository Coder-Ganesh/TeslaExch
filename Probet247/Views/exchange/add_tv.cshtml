
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Probet</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="SHORTCUT ICON" href="~/Content/images/favicon.ico" />
    <link rel="bookmark" href="~/Content/images/favicon.ico" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>

<body>
    <div class="container-fluid"><br /><br />
        <div class=" row">
            <div class="col-md-4"></div>
            <div class="main col-md-4">
                <h4 class="text-center">Update Detail <i class="fas fa-hand-point-down"></i></h4>
                @if (ViewBag.resda == "error")
                {
                    <div class="alert alert-danger" role="alert">
                        <ul>
                            <li>Error in update detail</li>
                        </ul>
                    </div>
                }
                else if (ViewBag.resda == "success")
                {
                    <div class="alert alert-success" role="alert">
                        <ul>
                            <li>Details Updated Successfully</li>
                        </ul>
                    </div>
                }
                <form action="./add_tv" id="frm_lgn" method="GET">
                    <div class="form-group m-b-20">
                        <input name="ev_id" placeholder="event code" class="form-control" required="" value="" type="text">
                    </div>
                    <div class="form-group m-b-20">
                        <input name="tv_id" placeholder="tv channel" class="form-control" required="" value="" type="text">
                    </div>
                    <div class="form-group m-b-20">
                        <input name="cric_id" placeholder="cricket exchange id" value="" class="form-control" required="" autocomplete="off" type="text">
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-submit btn-login">Update<i class="fas fa-sign-in-alt"></i></button>
                    </div>
                </form>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</body>

</html>

