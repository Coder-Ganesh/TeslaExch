
@{
    Layout = "~/Views/Shared/_LayoutAgentM.cshtml";
}
<script src="~/Scripts/datepicksk/DateUtil.js"></script>
<script src="~/Scripts/datepicksk/JSUtil.js"></script>
<script src="~/Scripts/datepicksk/webCalendar.js"></script>
<style>
