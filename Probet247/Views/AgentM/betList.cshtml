        color: #F8D61C !important;
        border-color: #000 !important;
    }
</style>


<div class="main_wrap">
    <!-- agent path -->

    <div class="agent_path">
        <ul id="agentPath" class="agent_path-L">

            <li id="path6" class="" style="display: none;">
                <a href="javascript: void(0);">
                    <span class="lv_0">
                        COM
                    </span>
                    <strong></strong>
                </a>
            </li>

            <li id="pathCurrency" class="currency_tag" style="display: none;">
                <a href="javascript: void(0);">
                    <span class=""></span>
                    <strong></strong>
                </a>
            </li>

            <li id="path5" class="" style="display: none;">
                <a href="javascript: void(0);">
                    <span class="lv_1">
                        SS
                    </span>
                    <strong></strong>
                </a>
            </li>

            <li id="path4" class="">
                <a href="javascript: void(0);">
                    <span class="lv_2">
                        SUP
                    </span>
                    <strong>@Session["MDL_UserName"]</strong>
                </a>

            </li>

            <li id="path3" class="drop_down_li" style="">
                <a href="javascript: void(0);" onclick="accountPop1()">
                    <span class="lv_3">
                        MA
                    </span>
                    <strong>@ViewBag.DLUnameM</strong>
                </a>
                <input type="hidden" name="accountPopInput" id="accountPopInput1" value="0">
                <script>
                    function accountPop1() {
                        if ($("#accountPopInput1").val() == 0) {
                            $("#accountPopInput1").val("1");
                            $("#accountPop1").show();
                        }
                        else {
