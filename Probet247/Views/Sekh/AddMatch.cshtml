<script>

    function MatchFinish(ids, status) {
        var ids = ids;
        var result = confirm("Are to sure to " + status + " this match " + ids);
        if (result != true) {

        }
        else {

            $.ajax({

                type: 'POST',
                url: '/Other/MatchOpenXA',
                data: { event_code: ids, status: status },
                beforeSend: function () {
                    $("#ajax-loader").show();
                },
                success: function (result) {
                    alert(result);
                    setTimeout(function () {
                        $("#ajax-loader").hide();
                        window.location.href = "";
                        //alert(result);
                    }, 1000);
                },
                error: function () {
                    $("#ajax-loader").hide();
                    $.alert({
                        icon: 'fa fa-info-circle',
                        theme: 'modern',
                        closeIcon: true,
                        animation: 'scale',
                        type: 'red',
                        title: 'Info',
                        content: 'Error in OPEN Match.',
                        buttons: {
                            close: {
                                text: 'Close',
                                btnClass: 'btn-red',
                            }
                        }
                    });
                },
                timeout: 5000 * 60
            });
        }
    }

</script>

