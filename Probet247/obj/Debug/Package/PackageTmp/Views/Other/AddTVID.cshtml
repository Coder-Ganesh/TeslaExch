
@{
    Layout = null;
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <h2>Add Match</h2>
    <input type="hidden" value="@ViewBag.id" id="event_code" />
    <label>New 1X ID : </label>
    <input type="text" class="form-control" id="xid" /><br>
    <input type="submit" class="btn btn-success" value="Submit" onclick="xidupdate();" /><br><br><br><br>

    <label>TV URL : </label>
    <input type="text" class="form-control" id="tv" /><br>
    <input type="submit" class="btn btn-success" value="Submit" onclick="tvupdate();" /><br><br><br><br>

    <label>New LiveFeed  : </label>
    <input type="text" class="form-control" id="x_type" /><br>
    <label>New X Code  : </label>
    <input type="text" class="form-control" id="x_code" /><br>
    <input type="submit" class="btn btn-success" value="Submit" onclick="xcodeupdate();" /><br><br><br><br>


    <label>Is E-Sport if yes then 1 if Not then 0 : </label>
    <input type="text" class="form-control" id="e_sport" /><br>
    <label>Is Fancy if yes then 1 if Not then 0 : </label>
    <input type="text" class="form-control" id="is_fancy" /><br>
    <input type="submit" class="btn btn-success" value="Submit" onclick="isfancyupdate();" /><br><br><br><br>

    <label>Book Data Limit : </label>
    <input type="text" class="form-control" id="book_limit" /><br>
    <input type="submit" class="btn btn-success" value="Submit" onclick="BookLimit();" />

</div>
<script>
    function xidupdate() {
        var xid = document.getElementById("xid").value;
        var event_code = document.getElementById("event_code").value;
        var result = confirm("Are to sure to Update XID"); 
        if (result != true) {

        }
        else {
            if (event_code != "0" && event_code != "" && xid != "" && xid != "0") {
                $.ajax({
                    type: "POST",
                    url: "/Other/xidupdate",
                    data: { xid: xid, event_code: event_code },
                    success: function (result) {
                        if (result == "Success") {
                        }
                        alert(result)
                    },
                });
            }
            else {
                alert("Please Fill Correct");
            }
        }
    }
